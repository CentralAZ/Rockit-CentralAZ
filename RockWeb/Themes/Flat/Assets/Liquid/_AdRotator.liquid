<div id="announcement-rotator">

    <div class="flexslider">
      <ul class="slides">

        {% for Ad in Ads -%}
          <li>
            <a href="{{ Ad.DetailPageUrl }}">
              {% for Attribute in Ad.Attributes -%}
                {% if Attribute.Key == 'AdImage' -%}
                  {{ Attribute.Value }}
                {% endif -%}
              {% endfor -%}
            </a>
          </li>   
        {% endfor -%}

      </ul>
    </div>

  <div class="slide-control">
    <ul>
    
      {% for Ad in Ads -%}
        <li>{{ Ad.Title }}</li>   
      {% endfor -%}
      
    </ul>
    <div class="tipper"></div>
  </div>

</div>